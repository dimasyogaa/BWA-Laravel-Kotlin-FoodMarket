    </style>


    <style name="Tab">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorGrey1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">@color/colorWhite2</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <!-- Custom - Tab Layout  -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout.OnSurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabIndicatorColor">@color/colorBlack1</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/colorBlack1</item>
        <item name="tabTextColor">@color/colorGrey1</item>
        <item name="tabTextAppearance">@style/Tab</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorSurface">?attr/ydFmColorSurface</item>
        <item name="colorSurfaceVariant">?attr/ydFmColorSurfaceLow</item>
    </style>

