<resources>

    <!--  Custom - Splash Activity    -->
    <style name="Splash.Theme" parent="Theme.Material3.Light.NoActionBar">
        <!--                 <item name="android:windowIsTranslucent">true</item> -->
        <item name="android:backgroundTint">@color/colorYellow</item>
        <item name="android:navigationBarColor">@color/colorYellow</item>
        <item name="android:statusBarColor">@color/colorYellow</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <!-- Custom - Rounded Style  -->
    <style name="rounded">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="rounded.circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded.top8dp">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="rounded.All8dp">
        <item name="cornerSize">8dp</item>
    </style>

